{
    "name": "evaratech-monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && python3 -m uvicorn main:app --port 5000 --reload",
        "install:frontend": "cd frontend && npm install",
        "install:all": "npm run install:frontend && echo 'Backend deps managed via pip/venv'"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}